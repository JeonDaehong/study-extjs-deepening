<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.market.mapper.MemberMapper">

    <select id="getMemberCount" resultType="Long">
        SELECT COUNT(1) FROM MEMBER;
    </select>

    <select id="getMemberList" resultType="com.example.market.dto.MemberDto">
        SELECT * FROM MEMBER
        <where>
            <if test="searchMemberId != null and searchMemberId != ''">
                AND member_id LIKE CONCAT('%', #{searchMemberId}, '%')
            </if>
        </where>
        LIMIT #{start}, #{limit};
    </select>


</mapper>