<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.market.mapper.LoginMapper">

    <select id="getAdminCount" resultType="Long">
        SELECT COUNT(1) FROM ADMIN;
    </select>

    <select id="getLoginInfo" resultType="com.example.market.dto.AdminDataDto">
        SELECT * FROM ADMIN WHERE ADMIN_ID = #{adminId} AND ADMIN_PWD = #{adminPwd};
    </select>

    <update id="updatePassword">
        UPDATE ADMIN SET ADMIN_PWD = #{updatePassword}
    </update>

</mapper>